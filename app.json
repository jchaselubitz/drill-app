{
  "expo": {
    "name": "drill-app",
    "slug": "drill-app",
    "version": "1.1.2",
    "orientation": "portrait",
    "scheme": "drillapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "icon": "./assets/images/1024.png",
    "ios": {
       "icon": "./assets/images/1024.png",
      "supportsTablet": true
    },
    "extra": {
      "eas": {
        "projectId": "EXPO_PUBLIC_EAS_PROJECT_ID"
      }
    },
    "infoPlist": {
      "UIDesignRequiresCompatibility": true,
      "UIBackgroundModes": ["processing"],
      "BGTaskSchedulerPermittedIdentifiers": ["com.drillapp.mobile.background-review-fetch", "com.drillapp.mobile.background-audio-fetch"]
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/1024.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-audio",
        {
          "microphonePermission": false
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
